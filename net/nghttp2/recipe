pkgname=nghttp2
pkgver=1.51.0
arcext=tar.xz
arcurlbase=https://github.com/nghttp2/nghttp2/releases/download/v$pkgver/

_patch () {
    # コマンドの man ページをインストールしない。
    sed -i.orig \
        '/man_MANS[[:blank:]]*=/s/[[:blank:]]*[^[:blank:]]*\.1//g' \
        doc/Makefile.in
}

_config () {
    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-static \
        --enable-lib-only \
        CFLAGS="$optflags"
}
