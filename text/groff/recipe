pkgname=groff
pkgver=1.22.4
arcurlbase=https://ftpmirror.gnu.org/groff/

# man に必要な nroff のためにインストールする。

# --with-doc=no は man ページ以外のマニュアルや見本をインストールしない。
# それでも letter.mm はインストールされてしまうので make install 時に
# MMEXAMPLEFILES を上書きする。

# --without-uchardet は uchardet を使う preconv のビルドをしない。

_config () {
    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --with-doc=no \
        --without-uchardet \
        PAGE=A4 \
        CFLAGS="$optflags" \
        CXXFLAGS="$optflags"
}

_install () {
    make install MMEXAMPLEFILES= "$@"
}
