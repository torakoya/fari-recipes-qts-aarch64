pkgname=expat
pkgver=2.4.8
arcext=tar.lz
arcurlbase=https://github.com/libexpat/libexpat/releases/download/R_$(echo $pkgver | tr . _)/

_config () {
    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-static \
        CFLAGS="$optflags" \
        LT_SYS_LIBRARY_PATH="$prefix"/lib
}
