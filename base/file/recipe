pkgname=file
pkgver=5.41
arcurlbase=ftp://ftp.astron.com/pub/file/
run_deps="bzip2 xz zlib"

_config () {
    ./configure \
        --prefix="$prefix" \
        --enable-fsect-man5 \
        --disable-static \
        --disable-silent-rules \
        CFLAGS="$optflags" \
        LT_SYS_LIBRARY_PATH="$prefix"/lib
}
