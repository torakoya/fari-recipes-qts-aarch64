pkgname=lsof
pkgver=4.99.3
arcurlbase=https://github.com/lsof-org/lsof/releases/download/$pkgver/
build_deps="groff" # soelim

_config () {
    # SOURCE_DATE_EPOCH=: ビルド環境の情報をバイナリに埋め込む（lsof
    # -v で表示される）のを抑制する。

    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-liblsof \
        SOURCE_DATE_EPOCH=0 \
        CFLAGS="$optflags"
}
