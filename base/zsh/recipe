pkgname=zsh
pkgver=5.8
arcext=tar.xz
arcurlbase=https://downloads.sourceforge.net/project/zsh/zsh/$pkgver/
run_deps=ncursesw

# --disable-locale したら，コンソールへの文字入力やファイル名の補完で
# 和文文字がエスケープされて読めなくなってしまった。

# 悩んだ configure オプション：
# * --disable-gdbm，GDBM は今のところなくて困っていない
# * --enable-pcre，まあ不要だろう
# * --enable-unicode9，まあ不要だろう

_config () {
    ./configure \
        --prefix="$prefix" \
        --enable-multibyte \
        --disable-gdbm \
        CFLAGS="$optflags"
}
