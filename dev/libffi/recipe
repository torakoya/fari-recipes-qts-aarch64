pkgname=libffi
pkgver=3.4.2
arcurlbase=https://github.com/libffi/libffi/releases/download/v$pkgver/

_config () {
    # --enable-docs または --disable-docs はいずれを与えても文書なしに
    # なる。両方とも与えないと文書あり。なお文書ありでインストール
    # されるものは info。

    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-static \
        CFLAGS="$optflags"
}
