pkgname=bison
pkgver=3.8.2
arcext=tar.lz
arcurlbase=https://ftpmirror.gnu.org/bison/
run_deps="readline"

# --enable-relocatable は指定しない（doc/relocatable.texi）。
# このプログラムだけリロケータブルになってもしかたがないと思う。
# なお指定するとサイズがちょっとだけ大きくなる（誤差だが）。

_config () {
    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-nls \
        CFLAGS="$optflags"
}
