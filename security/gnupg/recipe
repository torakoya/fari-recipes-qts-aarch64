pkgname=gnupg
pkgver=2.4.0
arcext=tar.bz2
arcurlbase=https://gnupg.org/ftp/gcrypt/gnupg/
run_deps="bzip2 libassuan libgcrypt libgpg-error libksba ncurses npth pinentry readline zlib"

# 鍵サーバは利用しない。なお利用するには TLS ライブラリ，
# ntbTLS か GnuTLS が必要。

# TOFU は使わない。なお使うには SQLite が必要。

# 2.4.0 はソースディレクトリでビルド（./configure）すると
# make check が tests/gpgme でコケる：
#   mkdir: cannot create directory 'setup.scm': Not a directory
# 上流では修正済み：
# https://dev.gnupg.org/T6313

_patch () {
    # help*.txt は英語だけインストールする。
    sed -i.orig 's/help\.[A-Za-z_]*\.txt//g' doc/Makefile.in
}

_config () {
    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-nls \
        --disable-tofu \
        CFLAGS="$optflags"
}
