pkgname=xz
pkgver=5.4.5
arcext=tar.xz
arcurlbase=https://github.com/tukaani-project/xz/releases/download/v$pkgver/

_config () {
    ./configure \
        --prefix="$prefix" \
        --disable-silent-rules \
        --disable-static \
        --disable-nls \
        --disable-doc \
        CFLAGS="$optflags" \
        LT_SYS_LIBRARY_PATH="$prefix"/lib
}
